<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


<h1 class="text-center">挑戦回数: <%= @button_press.count %></h1>
<div class="text-center">
  <div class="btn-group">
    <%= link_to 'プラス', increment_button_presses_path, method: :post, class: 'btn btn-primary btn-lg text-light' %>
    <%= link_to 'マイナス', decrement_button_presses_path, method: :post, class: "btn btn-lg btn-danger text-light" %>
  </div>
</div>


<div class="text-center">

  <table class="table">
    <thead>
      <tr>
        <th>ゆる名</th>
        <th>階層</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td>
            <%= link_to '編集', edit_post_path(post), class: 'btn btn-primary text-light' %>
            <%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除しますか?' }, class: 'btn btn-danger text-light' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'ゆるを登録', new_post_path %>
</div>
